# ===========================================
# Application Settings
# ===========================================
APP_NAME="SaaSBase API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
# APP_PORT=8989
# FORWARD_DB_PORT=5439

# Locale Settings
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# ===========================================
# Database Configuration
# ===========================================
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=saasbase_api
DB_USERNAME=root
DB_PASSWORD=secret
DB_CHARSET=utf8
DB_COLLATION=utf8_unicode_ci

# ===========================================
# Redis Configuration
# ===========================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# ===========================================
# Session & Cache Configuration
# ===========================================
SESSION_DRIVER=array
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=array
CACHE_PREFIX=saasbase_

# ===========================================
# Queue & Broadcasting
# ===========================================
QUEUE_CONNECTION=sync
BROADCAST_DRIVER=log

# Pusher Configuration
PUSHER_APP_ID=saasbase
PUSHER_APP_KEY=saasbase-key
PUSHER_APP_SECRET=saasbase-secret
PUSHER_APP_CLUSTER=mt1
PUSHER_PORT=6001
PUSHER_METRICS_PORT=9601

# ===========================================
# File Storage
# ===========================================
FILESYSTEM_DISK=local

# MinIO Configuration (S3 Compatible)
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_CONSOLE_PORT=8900
MINIO_ROOT_USER=sail
MINIO_ROOT_PASSWORD=password
MINIO_BUCKET=saasbase

# AWS Configuration (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
AWS_ENDPOINT=

# ===========================================
# Mail Configuration
# ===========================================
MAIL_MAILER=array
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@saasbase.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# Debug & Development Tools
# ===========================================
SAIL_XDEBUG_MODE=off
SAIL_XDEBUG_CONFIG=client_host=host.docker.internal
IGNITION_LOCAL_SITES_PATH="${PWD}"

# ===========================================
# Security
# ===========================================
BCRYPT_ROUNDS=12
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160

# ===========================================
# Logging
# ===========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug


TELESCOPE_ENABLED=false
PULSE_ENABLED=false
