# ===========================================
# Application Settings
# ===========================================
APP_NAME="SaaSBase API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8989
FRONTEND_URL=http://localhost:5176
APP_PORT=8989
FORWARD_DB_PORT=5439

# Locale Settings
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# ===========================================
# Database Configuration
# ===========================================
DB_CONNECTION=pgsql
DB_HOST=pgsql
DB_PORT=5432
DB_DATABASE=saasbase_api
DB_USERNAME=root
DB_PASSWORD=secret
DB_CHARSET=utf8
DB_COLLATION=utf8_unicode_ci

# ===========================================
# Redis Configuration
# ===========================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# ===========================================
# Session & Cache Configuration
# ===========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
CACHE_PREFIX=saasbase_

# ===========================================
# Queue & Broadcasting
# ===========================================
QUEUE_CONNECTION=database # sync
BROADCAST_DRIVER=pusher # OLD?
BROADCAST_CONNECTION=pusher

# Pusher Configuration
PUSHER_APP_ID=local
PUSHER_APP_KEY=local
PUSHER_APP_SECRET=local
PUSHER_HOST=127.0.0.1
PUSHER_PORT=6001
PUSHER_SCHEME=http
PUSHER_APP_CLUSTER=mt1
PUSHER_METRICS_PORT=9601

# ===========================================
# File Storage
# ===========================================
FILESYSTEM_DISK=local
MEDIA_DISK=minio

# MinIO Configuration (S3 Compatible)
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_CONSOLE_PORT=8900
MINIO_ROOT_USER=sail
MINIO_ROOT_PASSWORD=password
MINIO_BUCKET=saasbase

# AWS Configuration (if using S3)
S3_ACCESS_KEY=...
S3_SECRET_KEY=...
S3_REGION=nl-ams
S3_BUCKET=saasbase
S3_ENDPOINT=https://s3.nl-ams.scw.cloud

# ===========================================
# Mail Configuration
# ===========================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@saasbase.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# Debug & Development Tools
# ===========================================
SAIL_XDEBUG_MODE=off
SAIL_XDEBUG_CONFIG=client_host=host.docker.internal
IGNITION_LOCAL_SITES_PATH="${PWD}"

# ===========================================
# Security
# ===========================================
BCRYPT_ROUNDS=12
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160

# ===========================================
# Logging
# ===========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# OAuth
# ===========================================
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://api.saasbase.madeyski.org/api/v1/oauth/github/callback

GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://api.saasbase.madeyski.org/api/v1/oauth/google/callback

# ===========================================
# Users
# ===========================================
DEFAULT_USER_FIRST_NAME="Test"
DEFAULT_USER_LAST_NAME="User"
DEFAULT_USER_EMAIL="test@example.com"
DEFAULT_USER_PASSWORD="Secret123!"

# USER_REQUIRE_ADMIN_APPROVAL=true

# ===========================================
# AI
# ===========================================
ANTHROPIC_API_KEY=
PERPLEXITY_API_KEY=

