<div class="invoice-container creative-template">
    <!-- Creative Reference Header -->
    <div class="creative-ref-header">
        <div class="creative-ref-blue-section">
            <div class="creative-ref-brand">
                <h2 class="creative-ref-brand-name">SaasBase</h2>
                <p class="creative-ref-brand-tagline">{{t "invoice.your_invoice_name"}}</p>
            </div>
        </div>
        <div class="creative-ref-invoice-section">
            <h1 class="creative-ref-invoice-title">{{t "invoice.invoice"}}</h1>
            <p class="creative-ref-invoice-number">{{t "invoice.invoice_number"}} {{invoice.number}}</p>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="creative-ref-content">
        <!-- Bill To and Payment Info Row -->
        <div class="creative-ref-top-row">
            <div class="creative-ref-bill-to">
                <h3 class="creative-ref-section-title">{{t "invoice.bill_to"}}</h3>
                <div class="creative-ref-client-info">
                    {{#if invoice.buyer.name}}
                        <p class="creative-ref-client-name">{{invoice.buyer.name}}</p>
                    {{/if}}
                    {{#if invoice.buyer.address}}
                        <p class="creative-ref-client-detail">{{invoice.buyer.address}}</p>
                    {{/if}}
                    {{#if invoice.buyer.country}}
                        <p class="creative-ref-client-detail">{{invoice.buyer.country}}</p>
                    {{/if}}
                    {{#if invoice.buyer.email}}
                        <p class="creative-ref-client-detail">E. {{invoice.buyer.email}}</p>
                    {{/if}}
                </div>
            </div>
            
            <div class="creative-ref-payment-info">
                <div class="creative-ref-payment-method">
                    <h4 class="creative-ref-payment-title">{{t "invoice.payment_method"}}:</h4>
                    <p class="creative-ref-payment-detail">{{invoice.payment.method}}</p>
                    <p class="creative-ref-payment-detail">Card Payment Will Accept. Visa, Mastercard, Payoneer</p>
                </div>
            </div>
        </div>

        <!-- Date and Account Due Section -->
        <div class="creative-ref-date-row">
            <div class="creative-ref-date-info">
                <p class="creative-ref-date-label">{{t "invoice.date"}}: {{invoice.issueDate}}</p>
            </div>
            <div class="creative-ref-account-due">
                <p class="creative-ref-due-label">{{t "invoice.account_due"}}</p>
                <p class="creative-ref-due-amount">{{invoice.formattedTotalGross}}</p>
            </div>
        </div>

        <!-- Items Table -->
        <div class="creative-ref-table-section">
            <table class="creative-ref-table">
                <thead>
                    <tr>
                        <th class="creative-ref-th-description">{{t "invoice.item_descriptions"}}</th>
                        <th class="creative-ref-th-rate">{{t "invoice.rate"}}</th>
                        <th class="creative-ref-th-qty">{{t "invoice.quantity"}}</th>
                        <th class="creative-ref-th-price">{{t "invoice.price"}}</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each invoice.lines}}
                        <tr>
                            <td class="creative-ref-item-desc">
                                <div class="creative-ref-item-name">{{description}}</div>
                                <div class="creative-ref-item-details">{{vatRateName}} ({{vatRateValue}}%)</div>
                            </td>
                            <td class="creative-ref-item-rate">{{formattedUnitPrice}}</td>
                            <td class="creative-ref-item-qty">{{formattedQuantity}}</td>
                            <td class="creative-ref-item-price">{{formattedTotalGross}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <!-- Bottom Section -->
        <div class="creative-ref-bottom">
            <!-- Payment Methods Section -->
            <div class="creative-ref-payment-methods">
                <div class="creative-ref-payment-method-item">
                    <h4 class="creative-ref-method-title">{{t "invoice.payment_method"}}</h4>
                    <p class="creative-ref-method-text">{{invoice.payment.method}}</p>
                </div>
                <div class="creative-ref-payment-method-item">
                    <h4 class="creative-ref-method-title">{{t "invoice.card_payment"}}</h4>
                    <p class="creative-ref-method-text">Visa, Mastercard, Payoneer</p>
                </div>
            </div>

            <!-- Terms and Totals -->
            <div class="creative-ref-terms-totals">
                <div class="creative-ref-terms">
                    <h4 class="creative-ref-terms-title">{{t "invoice.terms_conditions_notes"}}:</h4>
                    <p class="creative-ref-terms-text">Your Privacy and Security are important to us. This is your second month using our software under our conditions that can be found here.</p>
                </div>
                
                <div class="creative-ref-totals">
                    <div class="creative-ref-total-line">
                        <span class="creative-ref-total-label">{{t "invoice.sub_total"}}</span>
                        <span class="creative-ref-total-value">{{invoice.formattedTotalNet}}</span>
                    </div>
                    <div class="creative-ref-total-line">
                        <span class="creative-ref-total-label">{{t "invoice.tax_vat"}}({{invoice.vatSummary.0.vatRateValue}}%)</span>
                        <span class="creative-ref-total-value">{{invoice.formattedTotalTax}}</span>
                    </div>
                    <div class="creative-ref-total-line">
                        <span class="creative-ref-total-label">{{t "invoice.discount"}} (5%)</span>
                        <span class="creative-ref-total-value">-</span>
                    </div>
                    <div class="creative-ref-grand-total">
                        <span class="creative-ref-grand-label">{{t "invoice.grand_total"}}</span>
                        <span class="creative-ref-grand-value">{{invoice.formattedTotalGross}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reference Footer -->
    <div class="creative-ref-footer">
        <div class="creative-ref-contact-section">
            <div class="creative-ref-contact-item">
                <div class="creative-ref-contact-icon">üì±</div>
                <div class="creative-ref-contact-text">{{invoice.seller.phone}}</div>
            </div>
            <div class="creative-ref-contact-item">
                <div class="creative-ref-contact-icon">‚úâÔ∏è</div>
                <div class="creative-ref-contact-text">{{invoice.seller.email}}</div>
            </div>
            <div class="creative-ref-contact-item">
                <div class="creative-ref-contact-icon">üìç</div>
                <div class="creative-ref-contact-text">{{invoice.seller.address}}</div>
            </div>
        </div>
        
        <div class="creative-ref-signature">
            <p class="creative-ref-signature-text">{{t "invoice.signature"}}</p>
            <p class="creative-ref-signature-name">{{invoice.seller.name}}</p>
            <p class="creative-ref-signature-title">{{t "invoice.manager"}}</p>
        </div>
    </div>

</div>