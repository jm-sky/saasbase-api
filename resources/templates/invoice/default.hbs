<div class="invoice-container">
    <!-- Header Section -->
    <table class="w-full mb-8">
        <tr>
            <td class="w-1/2" style="vertical-align: top;">
                {{#if invoice.seller.logoUrl}}
                    <div class="mb-6">
                        {{{logoUrl invoice.seller.logoUrl width="180px"}}}
                    </div>
                {{/if}}
                <h1 class="text-3xl font-bold text-gray-900 mb-2">{{t "invoices.invoice"}}</h1>
                <p class="text-xl font-semibold accent-text">#{{invoice.number}}</p>
            </td>
            <td class="w-1/2 text-right" style="vertical-align: top;">
                <div class="invoice-info-card">
                    {{#if invoice.issueDate}}
                        <p class="invoice-info-row">
                            <span class="invoice-info-label">{{t "invoices.issue_date"}}</span>
                            <span class="invoice-info-value">{{invoice.issueDate}}</span>
                        </p>
                    {{/if}}
                    {{#if invoice.dueDate}}
                        <p class="invoice-info-row">
                            <span class="invoice-info-label">{{t "invoices.due_date"}}</span>
                            <span class="invoice-info-value">{{invoice.dueDate}}</span>
                        </p>
                    {{/if}}
                    {{#if invoice.status}}
                        <p class="invoice-info-row">
                            <span class="invoice-info-label">{{t "invoices.status"}}</span>
                            <span class="invoice-info-value status-badge">{{invoice.status}}</span>
                        </p>
                    {{/if}}
                </div>
            </td>
        </tr>
    </table>

    <!-- Business Information Section -->
    <table class="w-full mb-8">
        <tr>
            <td class="w-1/2" style="vertical-align: top; padding-right: 20px;">
                <div class="business-card seller-card">
                    <div class="business-card-header">
                        <h3 class="business-card-title">{{t "invoices.from"}}</h3>
                    </div>
                    <div class="business-card-content">
                        {{#if invoice.seller.name}}
                            <p class="company-name">{{invoice.seller.name}}</p>
                        {{/if}}
                        {{#if invoice.seller.address}}
                            <p class="address-line">{{invoice.seller.address}}</p>
                        {{/if}}
                        {{#if invoice.seller.country}}
                            <p class="address-line">{{invoice.seller.country}}</p>
                        {{/if}}
                        {{#if invoice.seller.taxId}}
                            <p class="detail-line"><span class="detail-label">{{t "invoices.tax_id"}}</span> {{invoice.seller.taxId}}</p>
                        {{/if}}
                        {{#if invoice.seller.email}}
                            <p class="detail-line"><span class="detail-label">{{t "invoices.email"}}</span> {{invoice.seller.email}}</p>
                        {{/if}}
                    </div>
                </div>
            </td>
            <td class="w-1/2" style="vertical-align: top; padding-left: 20px;">
                <div class="business-card buyer-card">
                    <div class="business-card-header">
                        <h3 class="business-card-title">{{t "invoices.to"}}</h3>
                    </div>
                    <div class="business-card-content">
                        {{#if invoice.buyer.name}}
                            <p class="company-name">{{invoice.buyer.name}}</p>
                        {{/if}}
                        {{#if invoice.buyer.address}}
                            <p class="address-line">{{invoice.buyer.address}}</p>
                        {{/if}}
                        {{#if invoice.buyer.country}}
                            <p class="address-line">{{invoice.buyer.country}}</p>
                        {{/if}}
                        {{#if invoice.buyer.taxId}}
                            <p class="detail-line"><span class="detail-label">{{t "invoices.tax_id"}}</span> {{invoice.buyer.taxId}}</p>
                        {{/if}}
                        {{#if invoice.buyer.email}}
                            <p class="detail-line"><span class="detail-label">{{t "invoices.email"}}</span> {{invoice.buyer.email}}</p>
                        {{/if}}
                    </div>
                </div>
            </td>
        </tr>
    </table>

    <!-- Description Section -->
    {{#if invoice.description}}
        <div class="mb-8">
            <h3 class="section-title">{{t "invoices.description"}}</h3>
            <div class="description-card">
                {{invoice.description}}
            </div>
        </div>
    {{/if}}

    <!-- Invoice Items Table -->
    <div class="mb-8">
        <table class="items-table">
            <thead>
                <tr>
                    <th class="text-left py-3 px-3">{{t "invoices.description"}}</th>
                    <th class="text-center py-3 px-3" style="width: 10%;">{{t "invoices.quantity"}}</th>
                    <th class="text-right py-3 px-3" style="width: 15%;">{{t "invoices.unit_price"}}</th>
                    <th class="text-right py-3 px-3" style="width: 15%;">{{t "invoices.total_net"}}</th>
                    <th class="text-right py-3 px-3" style="width: 10%;">{{t "invoices.vat"}}</th>
                    <th class="text-right py-3 px-3" style="width: 15%;">{{t "invoices.total_gross"}}</th>
                </tr>
            </thead>
            <tbody>
                {{#each invoice.lines}}
                    <tr>
                        <td class="py-3 px-3 item-description">
                            {{#if description}}
                                <div class="item-name">{{description}}</div>
                            {{/if}}
                            <div class="item-vat">{{vatRateName}} ({{vatRateValue}}%)</div>
                        </td>
                        <td class="text-center py-3 px-3 item-cell">{{formattedQuantity}}</td>
                        <td class="text-right py-3 px-3 item-cell">{{formattedUnitPrice}}</td>
                        <td class="text-right py-3 px-3 item-cell">{{formattedTotalNet}}</td>
                        <td class="text-right py-3 px-3 item-cell">{{formattedTotalVat}}</td>
                        <td class="text-right py-3 px-3 item-total">{{formattedTotalGross}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <!-- VAT Summary (if applicable) -->
    {{#if invoice.vatSummary}}
        <div class="mb-6">
            <h3 class="section-title">{{t "invoices.vat_summary"}}</h3>
            <table class="vat-summary-table">
                <thead>
                    <tr>
                        <th class="text-left py-2 px-3">{{t "invoices.vat_rate"}}</th>
                        <th class="text-right py-2 px-3">{{t "invoices.net_amount"}}</th>
                        <th class="text-right py-2 px-3">{{t "invoices.vat_amount"}}</th>
                        <th class="text-right py-2 px-3">{{t "invoices.gross_amount"}}</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each invoice.vatSummary}}
                        <tr>
                            <td class="py-2 px-3 vat-cell">{{vatRateName}} ({{vatRateValue}}%)</td>
                            <td class="text-right py-2 px-3 vat-cell">{{formattedNet}}</td>
                            <td class="text-right py-2 px-3 vat-cell">{{formattedVat}}</td>
                            <td class="text-right py-2 px-3 vat-cell font-semibold">{{formattedGross}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    {{/if}}

    <!-- Total Summary -->
    <div class="mb-8">
        <table class="w-full">
            <tr>
                <td class="w-1/2"></td>
                <td class="w-1/2">
                    <div class="total-summary-card">
                        <table class="w-full">
                            <tr class="total-row">
                                <td class="total-label">{{t "invoices.subtotal"}}</td>
                                <td class="total-value">{{invoice.formattedTotalNet}}</td>
                            </tr>
                            <tr class="total-row">
                                <td class="total-label">{{t "invoices.vat"}}</td>
                                <td class="total-value">{{invoice.formattedTotalTax}}</td>
                            </tr>
                            <tr class="total-final-row">
                                <td class="total-final-label">{{t "invoices.total"}}</td>
                                <td class="total-final-value">{{invoice.formattedTotalGross}}</td>
                            </tr>
                        </table>
                    </div>
                </td>
            </tr>
        </table>
    </div>

    <!-- Exchange Rate Information -->
    {{#if invoice.exchange}}
        <div class="mb-6 bg-gray-50 p-4 border border-gray-200">
            <h3 class="text-base font-bold text-gray-900 mb-2">{{t "invoices.currency"}} {{invoice.exchange.currency}}</h3>
            {{#if invoice.exchange.formattedExchangeRate}}
                <p class="text-sm text-gray-700 mb-1">{{t "invoices.exchange_rate"}}: {{invoice.exchange.formattedExchangeRate}}</p>
            {{/if}}
            {{#if invoice.exchange.date}}
                <p class="text-sm text-gray-700">{{t "invoices.date"}}: {{invoice.exchange.date}}</p>
            {{/if}}
        </div>
    {{/if}}

    <!-- Payment Information -->
    {{#if invoice.payment}}
        <div class="mb-6">
            <h3 class="text-base font-bold text-gray-900 mb-2">{{t "invoices.payment_details"}}</h3>
            <div class="border border-gray-200 p-4 bg-gray-50">
                <div class="flex justify-between text-sm">
                    <div class="w-1/2 pr-4">
                        <p class="mb-1"><strong>{{t "invoices.payment_method"}}:</strong> {{invoice.payment.method}}</p>
                        <p class="mb-1"><strong>{{t "invoices.payment_status"}}:</strong> {{invoice.payment.status}}</p>
                        {{#if invoice.payment.reference}}
                            <p class="mb-1"><strong>{{t "invoices.reference"}}:</strong> {{invoice.payment.reference}}</p>
                        {{/if}}
                    </div>
                    <div class="w-1/2 pl-4">
                        {{#if invoice.payment.formattedPaidAmount}}
                            <p class="mb-1"><strong>{{t "invoices.paid_amount"}}:</strong> {{invoice.payment.formattedPaidAmount}}</p>
                        {{/if}}
                        {{#if invoice.payment.paidDate}}
                            <p class="mb-1"><strong>{{t "invoices.paid_date"}}:</strong> {{invoice.payment.paidDate}}</p>
                        {{/if}}
                    </div>
                </div>

                {{#if invoice.payment.bankAccount}}
                    <div class="mt-4 p-3 bg-white border border-gray-200">
                        <h4 class="font-semibold mb-2 text-sm">{{t "invoices.bank_account"}}</h4>
                        <div class="text-sm text-gray-700">
                            {{#if invoice.payment.bankAccount.bankName}}
                                <p class="mb-1"><strong>{{t "invoices.bank_name"}}:</strong> {{invoice.payment.bankAccount.bankName}}</p>
                            {{/if}}
                            {{#if invoice.payment.bankAccount.iban}}
                                <p class="mb-1"><strong>{{t "invoices.iban"}}:</strong> {{invoice.payment.bankAccount.iban}}</p>
                            {{/if}}
                            {{#if invoice.payment.bankAccount.swift}}
                                <p class="mb-1"><strong>{{t "invoices.swift"}}:</strong> {{invoice.payment.bankAccount.swift}}</p>
                            {{/if}}
                        </div>
                    </div>
                {{/if}}

                {{#if invoice.payment.terms}}
                    <div class="mt-4">
                        <h4 class="font-semibold mb-1 text-sm">{{t "invoices.payment_terms"}}</h4>
                        <p class="text-sm text-gray-700">{{invoice.payment.terms}}</p>
                    </div>
                {{/if}}

                {{#if invoice.payment.notes}}
                    <div class="mt-4">
                        <h4 class="font-semibold mb-1 text-sm">{{t "invoices.notes"}}</h4>
                        <p class="text-sm text-gray-700">{{invoice.payment.notes}}</p>
                    </div>
                {{/if}}
            </div>
        </div>
    {{/if}}

    <!-- Signatures Section -->
    {{#if options.includeSignatures}}
        <div class="mt-6 clearfix">
            {{#if options.issuerSignature}}
                <div class="w-1/2 float-left pr-4">
                    <div class="text-center">
                        <h4 class="font-semibold mb-2 text-sm">{{t "invoices.authorized_by"}}</h4>
                        <div class="border-b border-gray-800 mb-2" style="height: 40px; position: relative;">
                            {{#if options.issuerSignature.imageUrl}}
                                <div style="position: absolute; bottom: 0; left: 50%; transform: translateX(-50%);">
                                    {{{signatureUrl options.issuerSignature.imageUrl}}}
                                </div>
                            {{/if}}
                        </div>
                        <div class="text-sm font-medium">{{options.issuerSignature.name}}</div>
                        {{#if options.issuerSignature.title}}
                            <div class="text-xs text-gray-600">{{options.issuerSignature.title}}</div>
                        {{/if}}
                        {{#if options.issuerSignature.date}}
                            <div class="text-xs text-gray-600">{{options.issuerSignature.date}}</div>
                        {{/if}}
                    </div>
                </div>
            {{/if}}

            {{#if options.receiverSignature}}
                <div class="w-1/2 float-right pl-4">
                    <div class="text-center">
                        <h4 class="font-semibold mb-2 text-sm">{{t "invoices.received_by"}}</h4>
                        <div class="border-b border-gray-800 mb-2" style="height: 40px; position: relative;">
                            {{#if options.receiverSignature.imageUrl}}
                                <div style="position: absolute; bottom: 0; left: 50%; transform: translateX(-50%);">
                                    {{{signatureUrl options.receiverSignature.imageUrl}}}
                                </div>
                            {{/if}}
                        </div>
                        <div class="text-sm font-medium">{{options.receiverSignature.name}}</div>
                        {{#if options.receiverSignature.title}}
                            <div class="text-xs text-gray-600">{{options.receiverSignature.title}}</div>
                        {{/if}}
                        {{#if options.receiverSignature.date}}
                            <div class="text-xs text-gray-600">{{options.receiverSignature.date}}</div>
                        {{/if}}
                    </div>
                </div>
            {{/if}}
        </div>
    {{/if}}

    <!-- Footer Logo -->
    {{#if invoice.seller.logoUrl}}
        <div class="text-center mt-6 pt-4 border-t border-gray-200">
            {{{logoUrl invoice.seller.logoUrl width="100px"}}}
        </div>
    {{/if}}
</div>