<div class="invoice-container corporate-template">
    <!-- Professional Corporate Header -->
    <div class="corporate-header">
        {{#if invoice.seller.logoUrl}}
            <div class="corporate-logo">
                {{{logoUrl invoice.seller.logoUrl width="160px"}}}
            </div>
        {{/if}}
        <div class="corporate-title-section">
            <h1 class="corporate-title">{{t "invoices.invoice"}}</h1>
            <p class="corporate-number">#{{invoice.number}}</p>
        </div>
        <div class="corporate-info-card">
            {{#if invoice.issueDate}}
                <div class="corporate-info-row">
                    <span class="corporate-info-label">{{t "invoices.issue_date"}}:</span>
                    <span class="corporate-info-value">{{invoice.issueDate}}</span>
                </div>
            {{/if}}
            {{#if invoice.dueDate}}
                <div class="corporate-info-row">
                    <span class="corporate-info-label">{{t "invoices.due_date"}}:</span>
                    <span class="corporate-info-value">{{invoice.dueDate}}</span>
                </div>
            {{/if}}
            {{#if invoice.status}}
                <div class="corporate-info-row">
                    <span class="corporate-info-label">{{t "invoices.status"}}:</span>
                    <span class="corporate-info-value status-badge">{{invoice.status}}</span>
                </div>
            {{/if}}
        </div>
    </div>

    <!-- Business Information -->
    <div class="grid-cols-2">
        <div class="corporate-card seller-card">
            <div class="corporate-card-header">
                <h3 class="corporate-card-title">{{t "invoices.from"}}</h3>
            </div>
            <div class="corporate-card-content">
                {{#if invoice.seller.name}}
                    <p class="company-name">{{invoice.seller.name}}</p>
                {{/if}}
                {{#if invoice.seller.address}}
                    <p class="address-line">{{invoice.seller.address}}</p>
                {{/if}}
                {{#if invoice.seller.country}}
                    <p class="address-line">{{invoice.seller.country}}</p>
                {{/if}}
                {{#if invoice.seller.taxId}}
                    <p class="detail-line"><span class="detail-label">{{t "invoices.tax_id"}}</span>{{invoice.seller.taxId}}</p>
                {{/if}}
                {{#if invoice.seller.email}}
                    <p class="detail-line"><span class="detail-label">{{t "invoices.email"}}</span>{{invoice.seller.email}}</p>
                {{/if}}
            </div>
        </div>

        <div class="corporate-card buyer-card">
            <div class="corporate-card-header-light">
                <h3 class="corporate-card-title-dark">{{t "invoices.to"}}</h3>
            </div>
            <div class="corporate-card-content">
                {{#if invoice.buyer.name}}
                    <p class="company-name">{{invoice.buyer.name}}</p>
                {{/if}}
                {{#if invoice.buyer.address}}
                    <p class="address-line">{{invoice.buyer.address}}</p>
                {{/if}}
                {{#if invoice.buyer.country}}
                    <p class="address-line">{{invoice.buyer.country}}</p>
                {{/if}}
                {{#if invoice.buyer.taxId}}
                    <p class="detail-line"><span class="detail-label">{{t "invoices.tax_id"}}</span>{{invoice.buyer.taxId}}</p>
                {{/if}}
                {{#if invoice.buyer.email}}
                    <p class="detail-line"><span class="detail-label">{{t "invoices.email"}}</span>{{invoice.buyer.email}}</p>
                {{/if}}
            </div>
        </div>
    </div>

    <!-- Description Section -->
    {{#if invoice.description}}
        <div class="description-section">
            <h3 class="section-title">{{t "invoices.description"}}</h3>
            <div class="description-card">
                {{invoice.description}}
            </div>
        </div>
    {{/if}}

    <!-- Professional Invoice Items Table -->
    <div class="corporate-items-section">
        <table class="corporate-items-table">
            <thead>
                <tr>
                    <th class="text-left">{{t "invoices.description"}}</th>
                    <th class="text-center">{{t "invoices.quantity"}}</th>
                    <th class="text-right">{{t "invoices.unit_price"}}</th>
                    <th class="text-right">{{t "invoices.total_net"}}</th>
                    <th class="text-right">{{t "invoices.vat"}}</th>
                    <th class="text-right">{{t "invoices.total_gross"}}</th>
                </tr>
            </thead>
            <tbody>
                {{#each invoice.lines}}
                    <tr>
                        <td class="corporate-item-description">
                            {{#if description}}
                                <div class="item-name">{{description}}</div>
                            {{/if}}
                            <div class="item-vat">{{vatRateName}} ({{vatRateValue}}%)</div>
                        </td>
                        <td class="text-center item-cell">{{formattedQuantity}}</td>
                        <td class="text-right item-cell">{{formattedUnitPrice}}</td>
                        <td class="text-right item-cell">{{formattedTotalNet}}</td>
                        <td class="text-right item-cell">{{formattedTotalVat}}</td>
                        <td class="corporate-item-total">{{formattedTotalGross}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <!-- VAT Summary -->
    {{#if invoice.vatSummary}}
        <div class="vat-summary-section">
            <h3 class="section-title">{{t "invoices.vat_summary"}}</h3>
            <table class="vat-summary-table">
                <thead>
                    <tr>
                        <th class="text-left">{{t "invoices.vat_rate"}}</th>
                        <th class="text-right">{{t "invoices.net_amount"}}</th>
                        <th class="text-right">{{t "invoices.vat_amount"}}</th>
                        <th class="text-right">{{t "invoices.gross_amount"}}</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each invoice.vatSummary}}
                        <tr>
                            <td class="vat-cell">{{vatRateName}} ({{vatRateValue}}%)</td>
                            <td class="text-right vat-cell">{{formattedNet}}</td>
                            <td class="text-right vat-cell">{{formattedVat}}</td>
                            <td class="text-right vat-cell font-bold">{{formattedGross}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    {{/if}}

    <!-- Corporate Total Summary -->
    <div class="corporate-totals">
        <div class="corporate-totals-card">
            <div class="total-row">
                <span class="total-label">{{t "invoices.subtotal"}}</span>
                <span class="total-value">{{invoice.formattedTotalNet}}</span>
            </div>
            <div class="total-row">
                <span class="total-label">{{t "invoices.vat"}}</span>
                <span class="total-value">{{invoice.formattedTotalTax}}</span>
            </div>
            <div class="corporate-total-final">
                <span class="total-final-label">{{t "invoices.total"}}</span>
                <span class="total-final-value">{{invoice.formattedTotalGross}}</span>
            </div>
        </div>
    </div>

    <!-- Exchange Rate Information -->
    {{#if invoice.exchange}}
        <div class="payment-section">
            <h3 class="payment-title">{{t "invoices.currency"}} {{invoice.exchange.currency}}</h3>
            <div class="payment-info">
                {{#if invoice.exchange.formattedExchangeRate}}
                    <p><strong>{{t "invoices.exchange_rate"}}:</strong> {{invoice.exchange.formattedExchangeRate}}</p>
                {{/if}}
                {{#if invoice.exchange.date}}
                    <p><strong>{{t "invoices.date"}}:</strong> {{invoice.exchange.date}}</p>
                {{/if}}
            </div>
        </div>
    {{/if}}

    <!-- Payment Information -->
    {{#if invoice.payment}}
        <div class="payment-section">
            <h3 class="payment-title">{{t "invoices.payment_details"}}</h3>
            <div class="grid-cols-2">
                <div class="payment-info">
                    <p><strong>{{t "invoices.payment_method"}}:</strong> {{invoice.payment.method}}</p>
                    <p><strong>{{t "invoices.payment_status"}}:</strong> {{invoice.payment.status}}</p>
                    {{#if invoice.payment.reference}}
                        <p><strong>{{t "invoices.reference"}}:</strong> {{invoice.payment.reference}}</p>
                    {{/if}}
                </div>
                <div class="payment-info">
                    {{#if invoice.payment.formattedPaidAmount}}
                        <p><strong>{{t "invoices.paid_amount"}}:</strong> {{invoice.payment.formattedPaidAmount}}</p>
                    {{/if}}
                    {{#if invoice.payment.paidDate}}
                        <p><strong>{{t "invoices.paid_date"}}:</strong> {{invoice.payment.paidDate}}</p>
                    {{/if}}
                </div>
            </div>

            {{#if invoice.payment.bankAccount}}
                <div class="bank-account-section">
                    <h4 class="bank-account-title">{{t "invoices.bank_account"}}</h4>
                    <div class="bank-account-info">
                        {{#if invoice.payment.bankAccount.bankName}}
                            <p><strong>{{t "invoices.bank_name"}}:</strong> {{invoice.payment.bankAccount.bankName}}</p>
                        {{/if}}
                        {{#if invoice.payment.bankAccount.iban}}
                            <p><strong>{{t "invoices.iban"}}:</strong> {{invoice.payment.bankAccount.iban}}</p>
                        {{/if}}
                        {{#if invoice.payment.bankAccount.swift}}
                            <p><strong>{{t "invoices.swift"}}:</strong> {{invoice.payment.bankAccount.swift}}</p>
                        {{/if}}
                    </div>
                </div>
            {{/if}}

            {{#if invoice.payment.terms}}
                <div class="payment-info" style="margin-top: 16px;">
                    <h4 class="payment-title">{{t "invoices.payment_terms"}}</h4>
                    <p>{{invoice.payment.terms}}</p>
                </div>
            {{/if}}

            {{#if invoice.payment.notes}}
                <div class="payment-info" style="margin-top: 16px;">
                    <h4 class="payment-title">{{t "invoices.notes"}}</h4>
                    <p>{{invoice.payment.notes}}</p>
                </div>
            {{/if}}
        </div>
    {{/if}}

    <!-- Professional Signatures Section -->
    {{#if options.includeSignatures}}
        <div class="signatures-section">
            {{#if options.issuerSignature}}
                <div class="signature-box">
                    <h4 class="signature-title">{{t "invoices.authorized_by"}}</h4>
                    <div class="signature-line">
                        {{#if options.issuerSignature.imageUrl}}
                            <div style="position: absolute; bottom: 0; left: 50%; transform: translateX(-50%);">
                                {{{signatureUrl options.issuerSignature.imageUrl}}}
                            </div>
                        {{/if}}
                    </div>
                    <div class="signature-name">{{options.issuerSignature.name}}</div>
                    {{#if options.issuerSignature.title}}
                        <div class="signature-details">{{options.issuerSignature.title}}</div>
                    {{/if}}
                    {{#if options.issuerSignature.date}}
                        <div class="signature-details">{{options.issuerSignature.date}}</div>
                    {{/if}}
                </div>
            {{/if}}

            {{#if options.receiverSignature}}
                <div class="signature-box">
                    <h4 class="signature-title">{{t "invoices.received_by"}}</h4>
                    <div class="signature-line">
                        {{#if options.receiverSignature.imageUrl}}
                            <div style="position: absolute; bottom: 0; left: 50%; transform: translateX(-50%);">
                                {{{signatureUrl options.receiverSignature.imageUrl}}}
                            </div>
                        {{/if}}
                    </div>
                    <div class="signature-name">{{options.receiverSignature.name}}</div>
                    {{#if options.receiverSignature.title}}
                        <div class="signature-details">{{options.receiverSignature.title}}</div>
                    {{/if}}
                    {{#if options.receiverSignature.date}}
                        <div class="signature-details">{{options.receiverSignature.date}}</div>
                    {{/if}}
                </div>
            {{/if}}
        </div>
    {{/if}}

    <!-- Corporate Footer -->
    <div class="footer-section">
        {{#if invoice.seller.logoUrl}}
            {{{logoUrl invoice.seller.logoUrl width="120px"}}}
        {{/if}}
        <div class="footer-text">
            <p class="font-bold">{{t "invoices.invoice"}} {{invoice.number}}</p>
            <p>{{t "invoices.issue_date"}}: {{invoice.issueDate}} | {{t "invoices.due_date"}}: {{invoice.dueDate}}</p>
        </div>
    </div>
</div>